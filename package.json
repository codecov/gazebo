{
  "name": "gazebo",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@sentry/react": "^5.27.3",
    "classnames": "^2.2.6",
    "js-cookie": "^2.2.1",
    "lodash": "^4.17.20",
    "prop-types": "^15.7.2",
    "qs": "^6.9.4",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-query": "^2.26.3",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^4.0.1",
    "tailwindcss": "^1.9.6",
    "web-vitals": "^1.0.1"
  },
  "scripts": {
    "start": "rescripts start",
    "build": "export REACT_APP_SENTRY_RELEASE=$(git rev-parse --short HEAD); rescripts build",
    "test": "rescripts test",
    "sentry": "export REACT_APP_SENTRY_RELEASE=$(git rev-parse --short HEAD); rescripts build && node scripts/sentry.js",
    "test:ci": "rescripts test --collectCoverage ",
    "eject": "rescripts eject",
    "lint": "npx eslint --no-ignore --max-warnings=0 'src/**/*.{js,jsx,ts,tsx,json}'",
    "bundlesize": "npx bundlesize",
    "storybook": "start-storybook -p 6006 -s public --no-dll",
    "build-storybook": "build-storybook -s public --no-dll",
    "chromatic": "npx chromatic --exit-zero-on-changes -ci"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ],
    "src/**/*.{js,jsx,ts,tsx,json}": [
      "eslint --fix --no-ignore --max-warnings=0"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "bundlesize": [
    {
      "path": "./build/static/js/*.js",
      "maxSize": "100 kB"
    },
    {
      "path": "./build/static/css/*.css",
      "maxSize": "50 kB"
    }
  ],
  "devDependencies": {
    "@babel/core": "^7.12.7",
    "@rescripts/cli": "0.0.14",
    "@sentry/cli": "^1.59.0",
    "@storybook/addon-actions": "^6.1.2",
    "@storybook/addon-essentials": "^6.1.0",
    "@storybook/addon-links": "^6.1.0",
    "@storybook/node-logger": "^6.1.1",
    "@storybook/preset-create-react-app": "^3.1.4",
    "@storybook/react": "^6.1.2",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "@testing-library/react-hooks": "^3.4.2",
    "@testing-library/user-event": "^12.2.2",
    "autoprefixer": "9.8.6",
    "bundlesize": "^0.18.0",
    "eslint-config-prettier": "^6.15.0",
    "http-proxy-middleware": "^1.0.6",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "msw": "^0.22.0",
    "postcss-font-magician": "2.3.1",
    "prettier": "^2.2.0",
    "react-is": "^17.0.1",
    "react-test-renderer": "^17.0.1",
    "rescript-use-postcss-config": "^1.0.0"
  }
}
